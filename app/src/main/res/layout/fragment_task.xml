<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="taskViewModel"
            type="stanevich.elizaveta.spbseeker.task.TaskViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:scaleType="centerCrop"
            app:imgUrl="@{taskViewModel.properties}"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:theme="@style/Widget.AppCompat.Toolbar">

            <ImageView
                android:id="@+id/btn_vector_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start|center_horizontal|center_vertical"
                android:layout_marginTop="18dp"
                android:src="@drawable/ic_vector_back" />

            <ImageView
                android:id="@+id/btn_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_horizontal|center_vertical"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_menu" />

            <Button
                android:id="@+id/btn_puzzle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="end|center_horizontal|center_vertical"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/ic_puzzle"
                android:fontFamily="@font/fugue_mono"
                android:paddingEnd="1dp"
                android:paddingBottom="1dp"
                android:text="4"
                android:textColor="#ffff" />

        </androidx.appcompat.widget.Toolbar>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/gradientRect"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/indicator_gradient_rectangle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/indicatorIcon"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_indicator"
                app:layout_constraintBottom_toBottomOf="@id/gradientRect"
                app:layout_constraintStart_toStartOf="@id/gradientRect" />

            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/fugue_mono"
                android:textColor="#ffff"
                app:layout_constraintBottom_toTopOf="@id/gradientRect"
                app:layout_constraintEnd_toEndOf="@id/indicatorIcon"
                app:layout_constraintStart_toStartOf="@id/indicatorIcon"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="1428 Ð¼." />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>